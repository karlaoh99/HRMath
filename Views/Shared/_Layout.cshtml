@{
    var userIsAuthenticated = Context.User.Identity.IsAuthenticated;
    var userName = Context.User.Identity.Name;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Departamento de Matemática</title>

    <!-- Fontfaces CSS-->
    <link href="~/cool/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/cool/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/cool/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/cool/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="~/cool/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="~/cool/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/cool/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/cool/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/cool/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/cool/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/cool/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/cool/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/cool/css/theme.css" rel="stylesheet" media="all">

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER DESKTOP-->
        <header class="header-desktop3 d-none d-lg-block">
            <div class="section__content section__content--p35">
                <div class="header3-wrap">
                    <div class="header__logo">
                        <a href="~/cool/#">
                            <img src="~/cool/images/icon/logo-white.png" alt="CoolAdmin" />
                        </a>
                    </div>
                    <div class="header__navbar">
                        <ul class="list-unstyled">
                            @if (ViewBag.Section == "home")
                            {
                                <li class="active has-sub">
                                    <a asp-controller="Home" asp-action="Index">
                                        <i class="fas fa-home"></i>
                                        <span class="bot-line"></span>Inicio
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-controller="Home" asp-action="Index">
                                        <i class="fas fa-home"></i>
                                        <span class="bot-line"></span>Inicio
                                    </a>
                                </li>
                            }

                            @if (ViewBag.Section == "professor")
                            {
                                <li class="active has-sub">
                                    <a asp-controller="Professors" asp-action="Index">
                                        <i class="fas fa-users"></i>
                                        <span class="bot-line"></span>Profesores
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-controller="Professors" asp-action="Index">
                                        <i class="fas fa-users"></i>
                                        <span class="bot-line"></span>Profesores
                                    </a>
                                </li>
                            }

                            @if (ViewBag.Section == "schedule")
                            {
                                <li class="active has-sub">
                                    <a asp-controller="Schedule" asp-action="Index">
                                        <i class="fas fa-calendar"></i>
                                        <span class="bot-line"></span>Horarios
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-controller="Schedule" asp-action="Index">
                                        <i class="fas fa-calendar"></i>
                                        <span class="bot-line"></span>Horarios
                                    </a>
                                </li>
                            }

                            @if (ViewBag.Section == "subject")
                            {
                                <li class="active has-sub">
                                    <a asp-controller="Subject" asp-action="Index">
                                        <i class="fas fa-pencil-square"></i>
                                        <span class="bot-line"></span>Asignaturas
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-controller="Subject" asp-action="Index">
                                        <i class="fas fa-pencil-square"></i>
                                        <span class="bot-line"></span>Asignaturas
                                    </a>
                                </li>
                            }

                            @if (userIsAuthenticated)
                            {
                                if (User.IsInRole("Admin"))
                                {
                                    @if (ViewBag.Section == "account")
                                    {
                                        <li class="active has-sub">
                                            <a asp-controller="Account" asp-action="Index">
                                                <i class="fas fa-gears"></i>
                                                <span class="bot-line"></span>Administrar
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a asp-controller="Account" asp-action="Index">
                                                <i class="fas fa-gears"></i>
                                                <span class="bot-line"></span>Administrar
                                            </a>
                                        </li>
                                    }
                                }
                            }
                            else
                            {
                                @if (ViewBag.Section == "account")
                                {
                                    <li class="active has-sub">
                                        <a asp-controller="Account" asp-action="Login">
                                            <i class="fas fa-key"></i>
                                            <span class="bot-line"></span>Registarse
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-controller="Account" asp-action="Login">
                                            <i class="fas fa-key"></i>
                                            <span class="bot-line"></span>Registarse
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>

                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <div class="header__tool">
                            <div class="header-button-item has-noti js-item-menu">
                                <i class="zmdi zmdi-notifications"></i>
                                <div class="notifi-dropdown notifi-dropdown--no-bor js-dropdown">
                                    <div class="notifi__title">
                                        <p>You have 3 Notifications</p>
                                    </div>
                                    <div class="notifi__item">
                                        <div class="bg-c1 img-cir img-40">
                                            <i class="zmdi zmdi-email-open"></i>
                                        </div>
                                        <div class="content">
                                            <p>You got a email notification</p>
                                            <span class="date">April 12, 2018 06:50</span>
                                        </div>
                                    </div>
                                    <div class="notifi__item">
                                        <div class="bg-c2 img-cir img-40">
                                            <i class="zmdi zmdi-account-box"></i>
                                        </div>
                                        <div class="content">
                                            <p>Your account has been blocked</p>
                                            <span class="date">April 12, 2018 06:50</span>
                                        </div>
                                    </div>
                                    <div class="notifi__item">
                                        <div class="bg-c3 img-cir img-40">
                                            <i class="zmdi zmdi-file-text"></i>
                                        </div>
                                        <div class="content">
                                            <p>You got a new file</p>
                                            <span class="date">April 12, 2018 06:50</span>
                                        </div>
                                    </div>
                                    <div class="notifi__footer">
                                        <a href="~/cool/#">All notifications</a>
                                    </div>
                                </div>
                            </div>
                            <div class="account-wrap">
                                <div class="account-item account-item--style2 clearfix js-item-menu">
                                    <div class="content">
                                        <a class="js-acc-btn" href="~/cool/#">@userName</a>
                                    </div>
                                    <div class="account-dropdown js-dropdown">
                                        <div class="account-dropdown__body">
                                            <div class="account-dropdown__item">
                                                <a href="~/cool/#">
                                                    <i class="zmdi zmdi-account"></i>Account
                                                </a>
                                            </div>

                                            <div class="account-dropdown__item">
                                                <a asp-controller="Account" asp-action="Logout">
                                                    <i class="zmdi zmdi-power"></i>Logout
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </header>
        <!-- END HEADER DESKTOP-->
        <!-- PAGE CONTENT-->
        <div class="page-content--bgf7">
            @RenderBody()
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="~/cool/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/cool/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/cool/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/cool/vendor/slick/slick.min.js">
    </script>
    <script src="~/cool/vendor/wow/wow.min.js"></script>
    <script src="~/cool/vendor/animsition/animsition.min.js"></script>
    <script src="~/cool/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/cool/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/cool/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/cool/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/cool/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/cool/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/cool/vendor/select2/select2.min.js">
    </script>

    <!-- Main JS-->
    <script src="~/cool/js/main.js"></script>

    <!-- Validation JS -->
    <script src="~/cool/validation/jquery.min.js"></script>
    <script src="~/cool/validation/jquery.validate.min.js"></script>
    <script src="~/cool/validation/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>
<!-- end document-->
